    <!-- Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <Button
            android:id="@+id/button_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:onClick="onBackButton"
            android:text="@string/back_button"/>

    </LinearLayout>

