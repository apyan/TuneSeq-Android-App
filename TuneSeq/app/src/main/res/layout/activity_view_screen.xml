<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Info Header -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#515d70">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/image_000"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:src="@mipmap/ic_launcher_round"
                android:contentDescription="@string/desc_000" />

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/text_000"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="@string/desc_001"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_001"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="@string/desc_002"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_002"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="@string/desc_003"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Body Info -->
